<!DOCTYPE html>
<html>
<head>
  <title>Ksc</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body>
  <header>
    <div id="langbar" align="right">

    </div>
    <nav class="navbar st-navbar navbar-fixed-top animated bounce">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#st-navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
            <%= image_tag('ksc-logo.png', class: 'logo') %>
          </a>
        </div>

        <div class="collapse navbar-collapse" id="st-navbar-collapse">
          <ul class="nav navbar-nav ">
            <li><a href="/" class="active">HOME</a></li>
            <li><a href="/aboutus">ABOUT US</a></li>

            <li><a href="/topics">FORUM</a></li>
            <li><%= link_to "EVENTS", events_path %></li>

            <li><a href="/gallery">GALLERY</a></li>

          </ul>


          <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
              <select class="form-control">
                <option>Language</option>
                <option value="English">English</option>
                <option value="French">French</option>
              </select>
            </div>
          </form>
          <ul class="nav navbar-nav navbar-right">
            <% if(user_signed_in?) %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    						 <i class="fa fa-user"></i>
                 <%= current_user.username %>
    						 <span class="caret"></span>
					   </a>
             <ul class="dropdown-menu">
    							<li><a href="#">Settings</a></li>
    							<li><%= link_to "My Events", user_events_path %></li>
                  <% if can? :create, @event %>
                      <li><%= link_to "Create Event", new_event_path %></li>
                  <% end %>
    							<li class="divider"></li>
    							<li><%= link_to "About", statis_pages_about_path %></li>
    							<li><%= link_to "Log out", session_path, method: "delete" %></li>
						</ul>
          </li>
          <% else %>
              <li><a href="#" data-toggle="modal" data-target="#login-modal">Log in</a></li>
              <li><a href="/users/new" data-toggle="modal" data-target="/users/new">Register</a></li>
				  <% end %>


          <!--    < link_to session_path, method: :delete do >
                <i class="glyphicon glyphicon-log-out"></i>
                Log out
              < end >
            </li>
            < else >
            <li><a href="#" data-toggle="modal" data-target="#login-modal">Log in</a></li>
            <li><a href="/users/new" data-toggle="modal" data-target="/users/new">Register</a></li>
            < end > -->
          </ul>

        </nav>
      </header>


      <div id="login-modal" class="modal fade">
        <%= render 'sessions/new' %>
      </div>


      <!--<div class="container">
      < flash.each do |message_type, message| >
      <div class="alert alert-< message_type >">< message ></div>
      < end > -->

      <%= render 'layouts/messages' %>

      <%= yield %>
      </div>


