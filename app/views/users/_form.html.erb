<div class="modal-dialog modal-lg register-modal-dialog">
  <div class="row modal-content">

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title form-signin-heading">Registration</h4>
    </div>

    <div class="modal-body">

      <% @user ||= User.new %>

      <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "form field") %> needs your attention</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
          <li class="error-msg"><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="col-md-12">
      <%= form_for :user, url: '/users' do |f| %>

      <div class="form-group">

        <%= f.label :first_name, "First Name", class: 'required' %>
        <%= f.text_field :first_name, placeholder: "First Name", class: 'form-control' %>

        <%= f.label :last_name, "Last Name", class: 'required' %>
        <%= f.text_field :last_name, placeholder: "Last Name", class: 'form-control' %>

      </div>

      <div class="form-group">

        <%= f.label :email, "Email ID", class: 'required' %>
        <%= f.text_field :email, placeholder: "Email ID", class: 'form-control' %>

        <%= f.label :username, "Username", class: 'required' %>
        <%= f.text_field :username, placeholder: "Username", class: 'form-control' %>

      </div>

      <div class="form-group">

        <%=  f.label :password, "Password", class: 'required' %>
        <%= f.password_field :password, placeholder: '8 characters minimum and at least one symbol', class: 'form-control' %>

        <%= f.label :password_confirmation, 'Confirm Password', class: 'required' %>
        <%= f.password_field :password_confirmation, placeholder: 'should contain 8 characters and at least one symbol', class: 'form-control' %>

      </div>

      <div class="form-group">

        <%= f.label :contact_number, "Contact Number", class: 'required' %>
        <%= f.telephone_field :contact_number, placeholder: "Contact Number", class: 'form-control' %>

      </div>

      <div class="form-group">
        <%= f.label :'Gender', class: 'required' %><br>
        <div class="gender">

        <%= f.radio_button :gender, 'Male'%>&nbsp; Male&nbsp;
        <%= f.radio_button :gender, 'Female'%> &nbsp;Female&nbsp;
        <%= f.radio_button :gender, 'Other'%> &nbsp;Other
      </div>
      </div>

      <div class="form-group">

        <%= f.label :date_of_birth, "Date of Birth" %>
        <%= f.text_field :date_of_birth, class: 'date-picker form-control', placeholder: 'DD/MM/YYYY' %>

        <!-- i tried to implement date_of_birth using rails date_select tag, that also failed
        < f.date_select :date_of_birth, :start_year => Date.current.year, :end_year => 1930, order: [:day, :month, :year] > -->

      </div>

      <div class="form-group">

        <%= f.label :current_address, "Current Address" %>
        <%= f.text_area :current_address, size: "4x3", placeholder: "Current Address", class: 'form-control' %>
        <%= check_box_tag :copy_address %>&nbsp;&nbsp;<%= label_tag :copy_address, "Same as permanent address" %>

        <%= f.label :permanent_address, "Permanent Address" %>
        <%= f.text_area :permanent_address, size: "3x3", placeholder: "Permanent Address", class: 'form-control' %>

      </div>

      <div class="form-group">

        <%= f.label :country, "Country", class: 'required' %>
        <%= f.country_select :country, {}, class: "form-control" %>

      </div>

      <div class="form-group">

        <%= f.label :city, "City" %>
        <%= f.text_field :city, placeholder: "City", class: 'form-control' %>

      </div>

      <div class="form-group">

        <%= f.label :course, "Course" %>
        <%= f.text_field :course, placeholder: "Course", class: 'form-control' %>

        <%= f.label :university, "Universty / Institute" %>
        <%= f.text_field :university, placeholder: "University / Institute", class: 'form-control' %>

      </div>

      <div class="form-group">
        <%= f.label :'How did you get to know about KSC', class: 'required' %><br>
        <div class="hear-aboutus">
          <%= f.collection_check_boxes :source, ["Friends", "Social Media", "Google Search", "Other"], :to_s, :to_s do |b| %>
            <div class="checkbox">
              <label>
                <%= b.check_box %>
                <%= b.text %>
              </label>
            </div>
          <% end %>
          <input id="other_text" type="text" name="user[source][]" />
      </div>
      </div>


      <div class="checkbox">
        <label>
          <%= f.check_box :terms_and_conditions, class: 'terms_and_conditions' %>
          &nbsp;By ticking the <strong class="label label-primary">Check box</strong>, you agree to the
          <%= link_to 'Terms and Conditions', '/termscons' %>
        </label>
      </div>

      <div class="form-group">

        <%= recaptcha_tags %>

      </div>


      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
      </div>
      <br>


      <% end %>
    </div>
    </div>


  </div>
</div>
